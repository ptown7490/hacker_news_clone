<% content_for(:title, 'Links | HackerClone') %>
<%= link_to 'New link', new_link_path, :class => 'btn btn-default' %>
<h1>List of links</h1>

<ul>
  <% @links.each do |link| %>
    <li><a href='<%= link.content_url %>'><%= link.title %></a> |
      <%= link_to 'Delete', link_path(link), data: {confirm: 'You sure?', method: 'delete'}, :class => 'btn btn-danger' %></li>
  <% end %>
</ul>
